// learn more about it in the docs: https://pris.ly/d/prisma-schema


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  email    String    @unique
  password String
  username String    @unique
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  }

model Score {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  gameId     Int
  gameType   String
  player1    String
  player2    String
  score1     Int
  score2     Int
  winner     String
  loser      String
  firstServe String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}
